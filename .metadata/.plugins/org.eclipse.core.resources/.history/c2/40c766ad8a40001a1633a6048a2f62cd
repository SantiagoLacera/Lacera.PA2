import java.util.Scanner;

public class Encrypter {
	
	public static int codeEncrypter(int NUM_ENCRYPTED) {
	
	Scanner Digits = new Scanner(System.in);
	
	int[] Code = new int[4]; //Array of the digits collected by the user

	
    System.out.print("Enter the code that you want to Encrypt separate by a space: ");
    
    //Input from the User
    for (int i = 0; i <= Code.length; i++) {
    int temp; //temporary variable
    Code[i] = Digits.nextInt();
    
    //Encrypt function
   // Code[i] = (Code[i] + 7) % 10; 
    temp = Code[i];
    if(i <= 2) {
    Code[i + 2] = temp;
    }
    else {
    Code[i - 2] = temp;
    }
    
    }
    
   
   
   
   
return NUM_ENCRYPTED;
	}
}

